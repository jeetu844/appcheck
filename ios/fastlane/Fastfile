platform :ios do
    desc "Build the iOS app for physical devices"
    lane :build do
      update_code_signing_settings( 
        use_automatic_signing: true,
        team_id: "HR7RS84V6F"
      )
      
      build_ios_app(
        workspace: "AppCheck.xcworkspace",  # Correct workspace file
        scheme: "AppCheck",  # Use the scheme name without '.xcscheme'
        export_method: "development",
        output_directory: "./build",
        codesigning_identity: "iPhone Developer",
        export_team_id: "HR7RS84V6F"
      )
    end
  end
  